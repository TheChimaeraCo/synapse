# =============================================================================
# Synapse - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.

# -----------------------------------------------------------------------------
# Convex (Backend)
# -----------------------------------------------------------------------------
# Your Convex deployment URL (self-hosted or cloud)
CONVEX_SELF_HOSTED_URL=http://127.0.0.1:3220
CONVEX_SITE_URL=http://127.0.0.1:3221
NEXT_PUBLIC_CONVEX_URL=http://127.0.0.1:3220

# Admin key for self-hosted Convex (generate during Convex setup)
CONVEX_SELF_HOSTED_ADMIN_KEY=your-convex-admin-key-here

# -----------------------------------------------------------------------------
# Authentication (Auth.js / NextAuth)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
AUTH_SECRET=generate-with-openssl-rand-hex-32
NEXTAUTH_SECRET=generate-with-openssl-rand-hex-32

# The public URL where Synapse is hosted
AUTH_URL=https://your-synapse-domain.example.com
NEXTAUTH_URL=https://your-synapse-domain.example.com
AUTH_TRUST_HOST=true

# -----------------------------------------------------------------------------
# Search (Optional)
# -----------------------------------------------------------------------------
# Brave Search API key - get one at https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=your-brave-search-api-key

# -----------------------------------------------------------------------------
# Web Push Notifications (Optional)
# -----------------------------------------------------------------------------
# Generate VAPID keys with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
